 <center> 
 <div class="container ">
     <div class="col-md-5 border border-secondary">
         <div class="card" style="background-color: brown;">
            <h2 style="color: snow;">GUARDAR DATOS</h2>
             <div class="card-body">
                 <form action="/add" method="POST">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1" style="background-color: rgb(255, 187, 0);">Usuario  </span>
                        </div>
                        <input type="text" name="Usuario"  class="form-control">
                  </div>
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1" style="background-color: rgb(255, 187, 0);">Humedad  </span>
                    </div>
                          <input type="text" name="Humedad"  class="form-control">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1" style="background-color: rgb(255, 187, 0);">Temperatura</span>
                        </div>
                        <input type="text" name="Temperatura"  class="form-control">
                  </div>
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1" style="background-color: rgb(255, 187, 0);">Distancia cm</span>
                    </div>
                    <input type="text" name="Distancia"  class="form-control">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1" style="background-color: rgb(255, 187, 0);">Fecha</span>
                        </div>
                    <input type="date" name="Fecha"  class="form-control">
                    </div>
                  <button class="btn btn-outline-warning"> Guardar</button>
                  
                </form>
             </div>
         </div>
     </div>
    </center>
    <br>
    <br> 
    <center>
     <div class="col-md-5" style="background-color: brown;">
        <table class="table table-bordered table-hover">
            <h2 style="color: snow;">CONSULTA DE DATOS</h2>
            <thead >
                <tr >
                    <th style="color: rgb(255, 187, 0);">#</th>
                    <th style="color: rgb(255, 187, 0);">
                        Usuario
                    </th>
                    <th style="color: rgb(255, 187, 0);">
                        Humedad
                    </th>
                    <th style="color: rgb(255, 187, 0);">Temperatura</th>
                    <th style="color: rgb(255, 187, 0);">
                        Distancia
                    </th>
                    <th style="color: rgb(255, 187, 0);">Fecha</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < IOT_Proyecto.length; i++){  %>
                    <tr>
                        <td style="color: snow;"><%= i+1  %></td>
                        <td style="color: snow;"><%= IOT_Proyecto[i].Usuario  %></td>
                        <td style="color: snow;"><%= IOT_Proyecto[i].Humedad  %></td>
                        <td style="color: snow;"><%= IOT_Proyecto[i].Temperatura  %></td>
                        <td style="color: snow;"><%= IOT_Proyecto[i].Distancia  %></td>
                        <td style="color: snow;"><%= IOT_Proyecto[i].Fecha  %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
 </div> 
</center>
